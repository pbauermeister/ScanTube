<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/pref_buttons_titles"
        android:entryValues="@array/keys_pref_buttons"
        android:key="@string/key_pref_buttons"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_buttons_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/key_pref_autostart"
        android:summary="@string/pref_autostart_description"
        android:title="@string/pref_autostart_title" />

    <ListPreference
        android:defaultValue="front"
        android:entries="@array/pref_camera_titles"
        android:entryValues="@array/keys_pref_camera"
        android:key="@string/key_pref_camera"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_camera_title" />

</PreferenceScreen>
